# CloudFlare API Token
CF_TOKEN="abcd1234"

# Dictionary of "Domain": "CloudFlare Domain ID"
# Domain must be the root domain, not a subdomain, e.g. "example.com" and not "subdomain.example.com"
DOMAINS={"12cash.dev": "domainId123", "twelve.cash": "domainId123"}

# DNS Provider (digitalocean, cloudflare), use cloudflare for DNSSEC
PROVIDER="cloudflare"

# Network: "" for mainnet, "testnet" for testnet, "regtest" for regtest
NETWORK="regtest"

# Prisma
# https://www.prisma.io/docs/reference/database-reference/connection-urls#env
DATABASE_URL="postgresql://postgres:password@localhost:5432/twelvecash"

# Secret value for signing JWTs
JWT_SECRET="abc123"

# LND connection info
LND_HOST="" # Rest host ex. https://127.0.0.1
LND_PORT="" # ex. 8082
LND_MACAROON="" # base64 invoices macaroon
LND_TLS_CERT="" # base64
